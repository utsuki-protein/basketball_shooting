<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/base"
            android:id="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"/>
    <EditText
            android:layout_width="105dp"
            android:layout_height="44dp"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="61dp" tools:layout_editor_absoluteX="24dp" android:id="@+id/Count"/>
    <EditText
            android:layout_width="113dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Total"
            app:layout_constraintStart_toEndOf="@+id/editText3" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/Count" app:layout_constraintBottom_toBottomOf="@+id/Count"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="/"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintBottom_toBottomOf="@+id/Count" app:layout_constraintTop_toTopOf="@+id/Count"
            app:layout_constraintStart_toEndOf="@+id/Count" android:layout_marginStart="8dp"/>
    <Button
            android:text="Save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/save" app:layout_constraintStart_toEndOf="@+id/Total"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/Count" app:layout_constraintBottom_toBottomOf="@+id/Count"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>